<nav class="login-form mt-5">
  <div class="container">
      <div class="row justify-content-center">
          <div class="col-md-8">
              <div class="card">
                    <div class="card-header text-white bg-primary">Créer un compte</div>
                  <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                      <div class="form-group row">
                        <%= f.label :email, class: "col-md-4 col-form-label text-md-right" %>
                        <div class="col-md-6">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id:"email_address" %>
                        </div>
                      </div>
                      <div class="form-group row">
                        <%= f.label :mot_de_passe, class: "col-md-4 col-form-label text-md-right" %>
                          <div class="col-md-6">
                            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                          </div>
                        </div>
                      <div class="form-group row">

                        <%= f.label :confirmation_du_mot_de_passe, class: "col-md-4 col-form-label text-md-right" %>
                          <div class="col-md-6">
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                          </div>
                      </div>
                          <div class="col-md-6">
                            <%= f.hidden_field :admin, :value => false, class: "form-control" %>
                          </div>
                      <div class="col-md-6 offset-md-4">
                        <%= f.submit "Créer un compte", class: "btn btn-primary mx-5" %>
                        <% end %>
                        <br>
                      </div>
                        <%= render "devise/shared/links", class: "mx-5 text-center" %>
                      </div>
                  </div>
                </div>
            </div>
          </div>
      </div>
  </div>
  </div>
</nav >
